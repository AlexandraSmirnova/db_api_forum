__author__ = 'AS'

from common.DB_connect import *
from common import *

def clear():
    con = connect()
    tables = ['post', 'thread', 'forum', 'subscription', 'follower', 'user']
    DB_connect.execute(con,"SET global foreign_key_checks = 0;")
    for table in tables:
        DB_connect.execute(con,"TRUNCATE TABLE %s;" % table)
    DB_connect.execute(con,"SET global foreign_key_checks = 1;")
    con.close()
    return
